{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2015",
    "module":"es2020",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    // "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "lib/types",
    "outDir": "lib/esm",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ]
}
